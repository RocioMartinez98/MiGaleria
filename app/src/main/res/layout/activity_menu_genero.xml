<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080">

    <TextView
        android:id="@+id/tituloMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:text="Género"
        android:textColor="#ffff"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/bodegonBoton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/bodegonBoton"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="27dp"
        android:backgroundTint="#FF5722"
        android:onClick="bodegon"
        android:text="Bodegón"
        app:layout_constraintBottom_toTopOf="@+id/religionBoton"
        app:layout_constraintEnd_toStartOf="@+id/abstractoBoton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloMenu" />

    <Button
        android:id="@+id/religionBoton"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="227dp"
        android:backgroundTint="#FF5722"
        android:onClick="religion"
        android:text="Religión"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/paisajeBoton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bodegonBoton" />

    <Button
        android:id="@+id/abstractoBoton"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_marginEnd="52dp"
        android:backgroundTint="#FF5722"
        android:onClick="abstracto"
        android:text="Abstracto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bodegonBoton"
        app:layout_constraintTop_toTopOf="@+id/bodegonBoton" />

    <Button
        android:id="@+id/paisajeBoton"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_marginEnd="55dp"
        android:backgroundTint="#FF5722"
        android:onClick="paisaje"
        android:text="Paisaje"
        app:layout_constraintBottom_toBottomOf="@+id/religionBoton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/religionBoton" />

    <Button
        android:id="@+id/atrasBoton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5722"
        android:onClick="menuPrincipal"
        android:text="Atrás"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/religionBoton"
        app:layout_constraintVertical_bias="0.588" />

</androidx.constraintlayout.widget.ConstraintLayout>